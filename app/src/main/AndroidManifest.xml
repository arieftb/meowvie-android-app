<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.my.arieftb.meowvie">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MeowVieApplication"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MeowVie">
        <activity
            android:name="id.my.arieftb.meowvie.presentation.feature.splash.SplashScreenActivity"
            android:theme="@style/Theme.MeowVie.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="id.my.arieftb.meowvie.presentation.feature.main.MainActivity" />
    </application>

</manifest>