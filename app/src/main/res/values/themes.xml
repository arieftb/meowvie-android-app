<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MeowVie" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey_272727</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink_e5a5c8</item>
        <item name="colorSecondaryVariant">@color/pink_e5a5c8</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MeowVie.NoActionBar" parent="Theme.MeowVie">
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.MeowVie.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.MeowVie.BottomNavigationView</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="ThemeOverlay.MeowVie.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/grey_2e2e2e</item>
        <item name="colorOnPrimary">@color/pink_e5a5c8</item>
    </style>
</resources>