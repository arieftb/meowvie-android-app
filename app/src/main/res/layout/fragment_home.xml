<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollHome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:animateLayoutChanges="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_16sdp">

        <id.my.arieftb.meowvie.utils.layout.content_section.ContentSectionDefaultView
            android:id="@+id/sectionHomeWatchlist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:section_titleText="@string/section_watchlist"
            app:section_contentShimmer="@layout/shimmer_item_content_banner"/>


        <id.my.arieftb.meowvie.utils.layout.content_section.ContentSectionDefaultView
            android:id="@+id/sectionHomeNewMovie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sectionHomeWatchlist"
            app:section_titleText="@string/section_new_movie"
            app:section_contentShimmer="@layout/shimmer_item_content_default"/>

        <id.my.arieftb.meowvie.utils.layout.content_section.ContentSectionDefaultView
            android:id="@+id/sectionHomeNewTvShow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sectionHomeNewMovie"
            app:section_titleText="@string/section_new_tv_show"
            app:section_contentShimmer="@layout/shimmer_item_content_default"/>

        <id.my.arieftb.meowvie.utils.layout.content_section.ContentSectionDefaultView
            android:id="@+id/sectionHomeComingSoon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sectionHomeNewTvShow"
            app:section_titleText="@string/section_coming_soon"
            app:section_contentShimmer="@layout/shimmer_item_content_banner"/>

        <id.my.arieftb.meowvie.utils.layout.content_section.ContentSectionDefaultView
            android:id="@+id/sectionHomePopular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sectionHomeComingSoon"
            app:section_titleText="@string/section_popular"
            app:section_contentShimmer="@layout/shimmer_item_content_default"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>