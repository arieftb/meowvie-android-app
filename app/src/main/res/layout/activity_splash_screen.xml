<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageSplashScreenLogo"
        android:layout_width="@dimen/_96sdp"
        android:layout_height="0dp"
        android:src="@drawable/ic_logo"
        android:contentDescription="@string/image_description_splash_app_logo"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@id/textSplashScreenAppName"
        app:layout_constraintDimensionRatio="W, 1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textSplashScreenAppName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/pink_e5a5c8"
        android:textAlignment="center"
        android:textSize="@dimen/_32ssp"
        android:fontFamily="@font/bold"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:text="@string/app_name"
        app:layout_constraintTop_toBottomOf="@id/imageSplashScreenLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>